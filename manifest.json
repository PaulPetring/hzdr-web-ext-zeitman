{

  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "version": "1.3",
  "default_locale": "en",
  "description": "__MSG_extensionDescription__",
  "author": "Paul Petring p.petring@hzdr.de",
  "homepage_url": "https://github.com/PaulPetring/hzdr-web-ext-zeitman/",

  "applications": {
    "gecko": {
      "id": "p.petring@hzdr.de",
      "update_url": "https://raw.githubusercontent.com/PaulPetring/hzdr-web-ext-zeitman/master/updates.json"
    }
  },

  "icons": {
    "48": "icons/zeitman-48.png",
    "96": "icons/zeitman-96.png"
  },

   "permissions": [
    "storage",
    "*://zeitweb.hzdr.de/scripts_zeitm/*",
    "webRequest",
    "webRequestBlocking"
  ],
  "options_ui": {
      "page": "options.html"
    },
  "browser_action": {
    "default_icon": "icons/zeitman-96.png",
    "default_title": "__MSG_extensionName__",
    "default_popup": "popup/zeitman.html"
  }
}
